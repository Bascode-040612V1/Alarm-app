<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/accent_red"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Time Picker Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/card_gradient_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:layout_marginBottom="12dp" />

                    <TimePicker
                        android:id="@+id/timePicker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:timePickerMode="spinner" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Alarm Details Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/card_gradient_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alarm Details"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:layout_marginBottom="12dp" />

                    <!-- Title -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Alarm title"
                        app:hintTextColor="@color/secondary_text"
                        app:boxStrokeColor="@color/accent_red"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alarm"
                            android:textColor="@color/primary_text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Note -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Optional note"
                        app:hintTextColor="@color/secondary_text"
                        app:boxStrokeColor="@color/accent_red"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextNote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary_text"
                            android:maxLines="2" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Repeat Days Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/card_gradient_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Repeat Days"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text" />

                        <Button
                            android:id="@+id/buttonEveryday"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Everyday"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/accent_red"
                            android:minWidth="80dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp" />

                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal"
                        android:fadeScrollbars="false"
                        android:fillViewport="false"
                        android:scrollbarStyle="outsideOverlay">

                        <com.google.android.material.chip.ChipGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            app:singleLine="true"
                            app:chipSpacing="12dp">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipMonday"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Monday"
                                android:textColor="@color/chip_text_unselected"
                                app:chipBackgroundColor="@color/chip_unselected"
                                android:minWidth="90dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTuesday"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tuesday"
                                android:textColor="@color/chip_text_unselected"
                                app:chipBackgroundColor="@color/chip_unselected"
                                android:minWidth="90dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipWednesday"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wednesday"
                                android:textColor="@color/chip_text_unselected"
                                app:chipBackgroundColor="@color/chip_unselected"
                                android:minWidth="100dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipThursday"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thursday"
                                android:textColor="@color/chip_text_unselected"
                                app:chipBackgroundColor="@color/chip_unselected"
                                android:minWidth="90dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipFriday"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Friday"
                                android:textColor="@color/chip_text_unselected"
                                app:chipBackgroundColor="@color/chip_unselected"
                                android:minWidth="90dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipSaturday"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Saturday"
                                android:textColor="@color/chip_text_unselected"
                                app:chipBackgroundColor="@color/chip_unselected"
                                android:minWidth="90dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipSunday"
                                style="@style/Widget.MaterialComponents.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sunday"
                                android:textColor="@color/chip_text_unselected"
                                app:chipBackgroundColor="@color/chip_unselected"
                                android:minWidth="90dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp" />

                        </com.google.android.material.chip.ChipGroup>

                    </HorizontalScrollView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sound & Settings Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/card_gradient_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sound &amp; Settings"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:layout_marginBottom="12dp" />

                    <!-- Ringtone Selection -->
                    <LinearLayout
                        android:id="@+id/layoutRingtoneSelector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_music_note"
                            app:tint="@color/accent_red"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ringtone"
                                android:textColor="@color/primary_text"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textSelectedRingtone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Default"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/secondary_text" />

                    </LinearLayout>

                    <!-- Voice Recording Section -->


                    <!-- TTS (Text-to-Speech) Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:elevation="4dp"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="🎙️ Voice Overlay"
                            android:textColor="@color/primary_text"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="Record your voice to play over the selected ringtone"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp" />

                        <!-- Voice Recording Controls -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/buttonRecordVoice"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:backgroundTint="@color/accent_red"
                                android:text="🎙️ Record"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/buttonPlayVoice"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:background="@android:color/transparent"
                                android:enabled="false"
                                android:text="▶️ Play"
                                android:textColor="@color/accent_red"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/buttonDeleteVoice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:enabled="false"
                                android:minWidth="48dp"
                                android:text="🗑️"
                                android:textColor="@color/delete_color" />

                        </LinearLayout>

                        <!-- Voice History Toggle Button - SEPARATE ROW FOR VISIBILITY -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center">

                            <ToggleButton
                                android:id="@+id/toggleVoiceHistory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:minWidth="200dp"
                                android:textColor="@color/accent_red"
                                android:textOff="📂 Show Voice History"
                                android:textOn="📂 Hide Voice History"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Voice Recording Status and Toggle -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textVoiceStatus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:layout_weight="1"
                                android:text="No voice recording"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp" />

                            <Switch
                                android:id="@+id/switchVoiceOverlay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:text="Enable"
                                android:textColor="@color/primary_text"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="24dp"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:elevation="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🔊 Text-to-Speech"
                            android:textColor="@color/primary_text"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Enter Note to be Speech."
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp"
                            android:layout_marginBottom="16dp" />

                        <!-- TTS Controls -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <Button
                                android:id="@+id/buttonTestTts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🔊 Test TTS"
                                android:textColor="@color/white"
                                android:backgroundTint="@color/accent_red"
                                android:layout_marginEnd="16dp"
                                android:minWidth="120dp"
                                android:enabled="false" />

                            <Switch
                                android:id="@+id/switchTtsOverlay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Enable"
                                android:textColor="@color/primary_text"
                                android:textSize="14sp"
                                android:enabled="false" />

                        </LinearLayout>



                    </LinearLayout>

                    <!-- Volume Controls Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="24dp"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:elevation="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🔊 Volume Settings"
                            android:textColor="@color/primary_text"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <!-- Ringtone Volume -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="🔔 Ringtone Volume"
                                android:textColor="@color/primary_text"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textRingtoneVolume"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="80%"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp"
                                android:minWidth="40dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <SeekBar
                            android:id="@+id/seekBarRingtoneVolume"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:progress="80"
                            android:layout_marginBottom="24dp" />

                        <!-- Voice Overlay Volume -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="🎙️ Voice Volume"
                                android:textColor="@color/primary_text"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textVoiceVolume"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100%"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp"
                                android:minWidth="40dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <SeekBar
                            android:id="@+id/seekBarVoiceVolume"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:progress="100"
                            android:enabled="false" />

                        <!-- TTS Volume -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="24dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="🔊 TTS Volume"
                                android:textColor="@color/primary_text"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textTtsVolume"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100%"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp"
                                android:minWidth="40dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <SeekBar
                            android:id="@+id/seekBarTtsVolume"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:progress="100"
                            android:enabled="false"
                            android:layout_marginBottom="24dp" />

                        <!-- Vibration Setting -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="24dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="📳 Vibration"
                                android:textColor="@color/primary_text"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <Switch
                                android:id="@+id/switchVibration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true" />

                        </LinearLayout>

                        <!-- Snooze Duration -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Snooze Duration"
                                android:textColor="@color/primary_text"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/spinnerSnooze"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/gradient_start">

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Delete"
            android:textColor="@color/white"
            android:backgroundTint="@color/delete_color"
            style="@style/Widget.MaterialComponents.Button" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Save"
            android:textColor="@color/white"
            android:backgroundTint="@color/accent_red"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</LinearLayout>
